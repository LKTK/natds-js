{
  "automerge": false,
  "enabled": true,
  "extends": [
    "config:base"
  ],
  "ignoreDeps": [
    "@naturacosmeticos/natds-icons",
    "@naturacosmeticos/natds-styles",
    "@naturacosmeticos/natds-web",
    "snyk"
  ],
  "labels": ["dependencies", "renovate"],
  "lockFileMaintenance": true,
  "masterIssue": true,
  "masterIssueAutoclose": true,
  "packageRules": [
    {
      "groupName": "jest dependencies",
      "groupSlug": "jest",
      "labels": ["dependencies", "renovate", "testing"],
      "packagePatterns": ["@types/chai-jest-snapshot", "ts-jest"]
    },
    {
      "groupName": "rollup dependencies",
      "groupSlug": "rollup",
      "labels": ["dependencies", "renovate", "rollup"],
      "packagePatterns": ["@rollup/plugin-babel", "@rollup/plugin-commonjs", "@rollup/plugin-node-resolve", "@rollup/plugin-typescript"]
    },
    {
      "groupName": "styled-components dependencies",
      "groupSlug": "styled-components",
      "labels": ["dependencies", "renovate", "styled-components"],
      "packagePatterns": ["@types/styled-components", "jest-styled-components", "styled-components"]
    },
    {
      "packagePatterns": ["eslint"],
      "labels": ["dependencies", "linting", "renovate"]
    },
    {
      "packagePatterns": ["snyk"],
      "labels": ["dependencies", "renovate", "security"]
    },
    {
      "packagePatterns": ["@material-ui/core", "@material-ui/icons"],
      "labels": ["dependencies", "material ui", "renovate"]
    },
    {
      "packagePatterns": ["snyk"],
      "labels": ["dependencies", "renovate", "security"]
    }
  ],
  "semanticCommits": true,
  "unicodeEmoji": true,
  "updateLockFiles": true,
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
