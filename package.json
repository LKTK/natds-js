{
  "name": "NatDS",
  "version": "0.0.0-development",
  "description": "Natura Design System - A collection of components used by Natura Cosmeticos",
  "keywords": [
    "design-system"
  ],
  "author": "Vizir Software Studio <contato@vizir.com.br>",
  "contributors": [
    "Vicente Lyrio <vicente.lyrio@vizir.com.br>",
    "Vagner Saraiva <vagner@vizir.com.br>"
  ],
  "homepage": "https://github.com/natura-cosmeticos/natds/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/natura-cosmeticos/natds.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "clean": "lerna clean"
  },
  "license": "MIT",
  "devDependencies": {
    "commitizen": "4.0.3",
    "cz-lerna-changelog": "2.0.2",
    "husky": "3.0.5",
    "lerna": "3.16.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
